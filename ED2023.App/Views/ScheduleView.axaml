<rxui:ReactiveUserControl x:TypeArguments="vm:ScheduleViewModel" xmlns="https://github.com/avaloniaui"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:rxui="http://reactiveui.net"
                                xmlns:app="clr-namespace:ED2023.App"
                                xmlns:vm="clr-namespace:ED2023.App.ViewModels"
                                mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                                x:DataType="vm:ScheduleViewModel"
                                x:Class="ED2023.App.Views.ScheduleView">
    <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="False" IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Код" Binding="{Binding Id}"/>
            <DataGridTextColumn Header="Начало" Binding="{Binding Start, StringFormat='dd MMMM YY HH:mm'}"/>
            <DataGridTextColumn Header="Конец" Binding="{Binding End, StringFormat='dd MMMM YY HH:mm'}"/>
            <DataGridTextColumn Header="Курс" Binding="{Binding Course.Title}"/>
            <DataGridTextColumn Header="Группа" Binding="{Binding Group.Name}"/>
        </DataGrid.Columns>
    </DataGrid>
</rxui:ReactiveUserControl>
